<%= form_for([@post, @post.comments.build]) do |f| %>
  <div class="field">
    <%= f.label "Name" %><br />
    <%= f.text_field :commenter %>
  </div>
  <div class="field">
    <%= f.label :body %><br />
    <%= f.text_area :body, :rows => 3 %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
  <br>
<% end %>